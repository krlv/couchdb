{
  "name": "krlv/couchdb",
  "description": "CouchDB PHP client",
  "authors": [
    {
      "name": "Eugene Kirillov",
      "email": "eug.krlv@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.0",
    "guzzlehttp/guzzle": "~6.2"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "phploc/phploc": "~3.0",
    "squizlabs/php_codesniffer": "~3.0",
    "pdepend/pdepend": "~2.5",
    "friendsofphp/php-cs-fixer": "~2.0"
  },
  "autoload": {
    "psr-4": {
      "Couchdb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Couchdb\\Test\\": "tests/"
    }
  },
  "config": {
    "bin-dir": "bin/"
  }
}